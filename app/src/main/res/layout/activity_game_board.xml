<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C6200"
    tools:context=".GameBoard">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Blue Cards -->

    <ImageView
        android:id="@+id/bluePlayerCard1ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/blue_card_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_center"
        app:layout_constraintBottom_toTopOf="@+id/onitama_board_grid"
        app:layout_constraintDimensionRatio="3:2"/>
    <ImageView
        android:id="@+id/bluePlayerCard2ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/blue_card_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/onitama_board_grid"
        app:layout_constraintDimensionRatio="3:2"/>

    <GridLayout
        android:id="@+id/onitama_board_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:rowOrderPreserved="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="4dp"
        android:background="#F7E89F">

        <!-- Row 0 -->
        <ImageView
            android:id="@+id/cell_0_0"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:contentDescription="@string/cell_0_0"
            android:tag="0,0"/>
        <ImageView
            android:id="@+id/cell_0_1"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:contentDescription="@string/cell_0_1"
            android:tag="0,1"/>
        <ImageView
            android:id="@+id/cell_0_2"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_king"
            android:contentDescription="@string/cell_0_2"
            android:tag="0,2"/>
        <ImageView
            android:id="@+id/cell_0_3"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:contentDescription="@string/cell_0_3"
            android:tag="0,3"/>
        <ImageView
            android:id="@+id/cell_0_4"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:contentDescription="@string/cell_0_4"
            android:tag="0,4"/>

        <!-- Row 1 -->
        <ImageView
            android:id="@+id/cell_1_0"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_1_0"
            android:tag="1,0"/>
        <ImageView
            android:id="@+id/cell_1_1"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_1_1"
            android:tag="1,1"/>
        <ImageView
            android:id="@+id/cell_1_2"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_1_2"
            android:tag="1,0"/>
        <ImageView
            android:id="@+id/cell_1_3"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_1_3"
            android:tag="1,1"/>
        <ImageView
            android:id="@+id/cell_1_4"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_1_4"
            android:tag="1,1"/>

        <!-- Row 2 -->
        <ImageView
            android:id="@+id/cell_2_0"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_2_0"
            android:tag="2,0"/>
        <ImageView
            android:id="@+id/cell_2_1"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_2_1"
            android:tag="2,1"/>
        <ImageView
            android:id="@+id/cell_2_2"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_2_2"
            android:tag="2,2"/>
        <ImageView
            android:id="@+id/cell_2_3"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_2_3"
            android:tag="2,3"/>
        <ImageView
            android:id="@+id/cell_2_4"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_2_4"
            android:tag="2,4"/>

        <!-- Row 3 -->
        <ImageView
            android:id="@+id/cell_3_0"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_3_0"
            android:tag="3,0"/>
        <ImageView
            android:id="@+id/cell_3_1"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_3_1"
            android:tag="3,1"/>
        <ImageView
            android:id="@+id/cell_3_2"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_3_2"
            android:tag="3,2"/>
        <ImageView
            android:id="@+id/cell_3_3"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_3_3"
            android:tag="3,3"/>
        <ImageView
            android:id="@+id/cell_3_4"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:contentDescription="@string/cell_3_4"
            android:tag="3,4"/>

        <!-- Row 4 -->
        <ImageView
            android:id="@+id/cell_4_0"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:contentDescription="@string/cell_4_0"
            android:tag="4,0"/>
        <ImageView
            android:id="@+id/cell_4_1"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:contentDescription="@string/cell_4_1"
            android:tag="4,1"/>
        <ImageView
            android:id="@+id/cell_4_2"
            style="@style/GameCell"
            android:background="@drawable/ic_red_king"
            android:contentDescription="@string/cell_4_2"
            android:tag="4,2"/>
        <ImageView
            android:id="@+id/cell_4_3"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:contentDescription="@string/cell_4_3"
            android:tag="4,3"/>
        <ImageView
            android:id="@+id/cell_4_4"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:contentDescription="@string/cell_4_4"
            android:tag="4,4"/>

    </GridLayout>

    <!-- Red Cards -->
    <ImageView
        android:id="@+id/redPlayerCard1ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/red_card_1"
        app:layout_constraintTop_toBottomOf="@+id/onitama_board_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:2"/>
    <ImageView
        android:id="@+id/redPlayerCard2ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/red_card_2"
        app:layout_constraintTop_toBottomOf="@+id/onitama_board_grid"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:2"/>

    <!-- BLUE AMBIGUOUS MOVE CARD CHOICE OVERLAY (Initially Hidden) -->
    <View
        android:id="@+id/blueAmbiguousMoveOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#AA000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/onitama_board_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="invisible"/>

    <!-- RED AMBIGUOUS MOVE CARD CHOICE OVERLAY (Initially Hidden) -->
    <View
        android:id="@+id/redAmbiguousMoveOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#AA000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/onitama_board_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="invisible"/>


    <!-- GAME OVER OVERLAY (Initially Hidden) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameOverOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="invisible">  <!-- tools:visibility for design preview -->

        <TextView
            android:id="@+id/winnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/example_player_win"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/example_score"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/winnerText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_again"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/scoreText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/mainMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_menu"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/playAgainButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
