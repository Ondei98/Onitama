<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameBoard">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Top Player Move Cards -->
    <ImageView
        android:id="@+id/player_top_left_move_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_center"
        app:layout_constraintBottom_toTopOf="@+id/onitama_board_grid"
        app:layout_constraintDimensionRatio="3:2"/>
    <ImageView
        android:id="@+id/player_top_right_move_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/onitama_board_grid"
        app:layout_constraintDimensionRatio="3:2"/>
    
    <GridLayout
        android:id="@+id/onitama_board_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:rowOrderPreserved="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="4dp"
        android:background="#F7E89F"> <!-- Board background -->

        <!-- Row 0 -->
        <ImageView
            android:id="@+id/cell_0_0"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:tag="0,0"/>
        <ImageView
            android:id="@+id/cell_0_1"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:tag="0,1"/>
        <ImageView
            android:id="@+id/cell_0_2"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_king"
            android:tag="0,2"/>
        <ImageView
            android:id="@+id/cell_0_3"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:tag="0,3"/>
        <ImageView
            android:id="@+id/cell_0_4"
            style="@style/GameCell"
            android:background="@drawable/ic_blue_piece"
            android:tag="0,4"/>

        <!-- Row 1 -->
        <ImageView
            android:id="@+id/cell_1_0"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="1,0"/>
        <ImageView
            android:id="@+id/cell_1_1"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="1,1"/>
        <ImageView
            android:id="@+id/cell_1_2"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="1,0"/>
        <ImageView
            android:id="@+id/cell_1_3"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="1,1"/>
        <ImageView
            android:id="@+id/cell_1_4"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="1,1"/>

        <!-- Row 2 -->
        <ImageView
            android:id="@+id/cell_2_0"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="2,0"/>
        <ImageView
            android:id="@+id/cell_2_1"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="2,1"/>
        <ImageView
            android:id="@+id/cell_2_2"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="2,2"/>
        <ImageView
            android:id="@+id/cell_2_3"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="2,3"/>
        <ImageView
            android:id="@+id/cell_2_4"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="2,4"/>

        <!-- Row 3 -->
        <ImageView
            android:id="@+id/cell_3_0"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="3,0"/>
        <ImageView
            android:id="@+id/cell_3_1"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="3,1"/>
        <ImageView
            android:id="@+id/cell_3_2"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="3,2"/>
        <ImageView
            android:id="@+id/cell_3_3"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="3,3"/>
        <ImageView
            android:id="@+id/cell_3_4"
            style="@style/GameCell"
            android:background="@drawable/ic_empty_square"
            android:tag="3,4"/>

        <!-- Row 4 -->
        <ImageView
            android:id="@+id/cell_4_0"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:tag="4,0"/>
        <ImageView
            android:id="@+id/cell_4_1"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:tag="4,1"/>
        <ImageView
            android:id="@+id/cell_4_2"
            style="@style/GameCell"
            android:background="@drawable/ic_red_king"
            android:tag="4,2"/>
        <ImageView
            android:id="@+id/cell_4_3"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:tag="4,3"/>
        <ImageView
            android:id="@+id/cell_4_4"
            style="@style/GameCell"
            android:background="@drawable/ic_red_piece"
            android:tag="4,4"/>

    </GridLayout>

    <ImageView
        android:id="@+id/player_bottom_left_move_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/onitama_board_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:2"/>

    <!-- Bottom Right Player Move Card -->
    <ImageView
        android:id="@+id/player_bottom_right_move_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_card"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/onitama_board_grid"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:2"/>



</androidx.constraintlayout.widget.ConstraintLayout>
